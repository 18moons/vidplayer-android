<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <VideoView
	    android:id="@+id/vvVideo"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_centerInParent="true"/>
    
    <RelativeLayout
        android:id="@+id/layDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/player_text_bkg">
        
        <TextView 
            android:id="@+id/tvTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="6dip"
			android:layout_marginTop="6dip"
			android:text="Title"
			android:textColor="@android:color/white"
			android:textSize="25dip"
			android:textStyle="bold"/>
        
        <TextView 
            android:id="@+id/tvCategory"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tvTitle"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="6dip"
			android:layout_marginTop="2dip"
			android:text="Category"
			android:textColor="@android:color/white"
			android:textSize="13dip"/>
        
        <TextView 
            android:id="@+id/tvSubtitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tvCategory"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="6dip"
			android:layout_marginTop="8dip"
			android:text="Title"
			android:textColor="@android:color/white"
			android:textSize="13dip"/>
        
        <TextView 
            android:id="@+id/tvTeacher"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tvSubtitle"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="6dip"
			android:layout_marginTop="2dip"
			android:text="Teacher"
			android:textColor="@android:color/white"
			android:textSize="13dip"
			android:textStyle="italic"/>
        
        <TextView
            android:id="@+id/tvTags"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tvTeacher"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="6dip"
			android:layout_marginTop="8dip"
			android:textColor="@android:color/white"
			android:textSize="13dip"/>
        
        <TextView 
            android:id="@+id/tvLink"
            android:minWidth="200dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tvTags"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="6dip"
			android:layout_marginTop="8dip"
			android:padding="6dip"
			android:text="www.dx.tv.br/enem"
			android:textColor="#0000ff"
			android:textSize="13dip"/>
        
        <LinearLayout 
            android:layout_alignBottom="@id/tvLink"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
            	        
	        <TextView 
	            android:id="@+id/tvAttachment"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="6dip"
				android:layout_margin="4dip"
				android:background="@drawable/btn_blue"
				android:text="@string/pdf_btn_text"
				android:textColor="@android:color/white"
				android:textSize="15dip"/>
        
	        <TextView 
				android:id="@+id/tvBack"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="6dip"
				android:layout_margin="4dip"
				android:background="@drawable/btn_blue"
				android:text="@string/backAulas"
				android:textColor="@android:color/white"
				android:textSize="15dip"/>
	        
        </LinearLayout>
        
	</RelativeLayout>
	
</RelativeLayout>