<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.tv.dx.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@android:style/Theme.Light">
        <activity
            android:label="@string/app_name"
            android:name=".DXPlayerActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".CategoryViewActivity" android:label="@string/app_name" android:screenOrientation="landscape"/>
        <activity android:name=".AulasViewActivity" android:label="@string/app_name" android:screenOrientation="landscape"/>
        <activity android:name=".AulaVideoPlayer" android:label="@string/app_name" android:screenOrientation="landscape"/>
        
    </application>

</manifest>